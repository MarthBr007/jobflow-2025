# JobFlow Production Environment Variables

# ===== APPLICATION SETTINGS =====
NODE_ENV=production
APP_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secure-secret-key-32-chars-minimum

# ===== DATABASE =====
DATABASE_URL=postgresql://username:password@host:5432/jobflow_production

# ===== SSL/HTTPS =====
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ===== CDN CONFIGURATION =====
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_DOMAIN=https://cdn.yourdomain.com
CDN_CACHE_MAX_AGE=31536000

# ===== EMAIL SERVICE (Choose one) =====
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=JobFlow System

# Mailgun Configuration (Alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=JobFlow System

# SMTP Fallback
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# ===== FILE STORAGE (Choose one) =====
STORAGE_PROVIDER=aws-s3

# AWS S3 Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=jobflow-contracts-production

# Cloudflare R2 Configuration (Alternative)
# AWS_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Vercel Blob Configuration (Alternative)
# BLOB_READ_WRITE_TOKEN=vercel_blob_your-token

# Local Storage (Development only)
# LOCAL_STORAGE_PATH=./storage/contracts
# PUBLIC_STORAGE_URL=/api/files

# ===== SECURITY SETTINGS =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TOKEN_EXPIRY_HOURS=168
SESSION_TIMEOUT_MINUTES=60
CONTRACT_SIGNING_TOKEN_EXPIRY_DAYS=7
IP_VALIDATION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
PERFORMANCE_MONITORING=true

# ===== ANALYTICS =====
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=internal

# ===== TESTING (Optional) =====
TEST_EMAIL=test@yourdomain.com

# ===== COMPANY SETTINGS =====
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=info@yourdomain.com
COMPANY_PHONE=+31 6 12345678
COMPANY_ADDRESS=Your Address, City, Country

# ===== DEPLOYMENT SPECIFIC =====
# Vercel
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# Railway/DigitalOcean/etc
PORT=3000 