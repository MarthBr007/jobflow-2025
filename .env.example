# JobFlow Environment Variables Example
# Copy this file to .env.local for development or configure in your hosting provider

# ======================
# DATABASE CONFIGURATION
# ======================

# Development (SQLite)
# DATABASE_URL="file:./dev.db"

# Production (PostgreSQL - recommended)
# DATABASE_URL="postgresql://username:password@hostname:5432/database?schema=public"

# Production (MySQL)
# DATABASE_URL="mysql://username:password@hostname:3306/database"

# PlanetScale (MySQL with edge support)
# DATABASE_URL="mysql://username:password@aws.connect.psdb.cloud/database?sslaccept=strict"

# ======================
# AUTHENTICATION
# ======================

# NextAuth.js configuration
NEXTAUTH_URL="http://localhost:3000"  # Change to your production URL
NEXTAUTH_SECRET="your-super-secret-jwt-secret-min-32-characters-long"

# Generate a secure secret: openssl rand -base64 32

# ======================
# EMAIL CONFIGURATION (Optional)
# ======================

# SMTP settings for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourcompany.com"

# ======================
# APPLICATION SETTINGS
# ======================

# Application environment
NODE_ENV="development"  # or "production"

# Default company name for new users
DEFAULT_COMPANY="Your Company Name"

# Default admin user (only for initial setup)
ADMIN_EMAIL="admin@yourcompany.com"
ADMIN_PASSWORD="change-me-on-first-login"

# ======================
# MONITORING & ANALYTICS (Optional)
# ======================

# Sentry for error tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Google Analytics
# GA_TRACKING_ID="G-XXXXXXXXXX"

# ======================
# SECURITY SETTINGS
# ======================

# Enable/disable certain features
ENABLE_REGISTRATION="true"  # Allow new user registration
ENABLE_BULK_IMPORT="true"   # Allow bulk user import
ENABLE_EMAIL_NOTIFICATIONS="true"

# Session configuration
SESSION_MAX_AGE="2592000"  # 30 days in seconds

# ======================
# FILE STORAGE (Optional)
# ======================

# For file uploads (if implemented)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret"
# AWS_REGION="eu-west-1"
# AWS_S3_BUCKET="your-s3-bucket"

# ======================
# DEVELOPMENT ONLY
# ======================

# Database logging (only in development)
# DATABASE_LOGGING="true"

# Debug mode
# DEBUG="true"

# ======================
# PRODUCTION OPTIMIZATIONS
# ======================

# Enable/disable certain optimizations
ENABLE_ANALYTICS="false"  # Set to true in production
ENABLE_COMPRESSION="true"
ENABLE_CACHING="true"

# ======================
# BACKUP CONFIGURATION
# ======================

# Automated backup settings (if implemented)
# BACKUP_ENABLED="true"
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS="30"

# ======================
# EXAMPLE CONFIGURATIONS
# ======================

# Example for Vercel deployment:
# DATABASE_URL="mysql://user:pass@aws.connect.psdb.cloud/jobflow?sslaccept=strict"
# NEXTAUTH_URL="https://jobflow.vercel.app"
# NEXTAUTH_SECRET="super-secret-32-plus-character-string"

# Example for DigitalOcean:
# DATABASE_URL="postgresql://user:pass@db-postgresql-fra1-12345-do-user-123456-0.b.db.ondigitalocean.com:25060/jobflow?sslmode=require"
# NEXTAUTH_URL="https://jobflow-abc123.ondigitalocean.app"
# NEXTAUTH_SECRET="super-secret-32-plus-character-string"

# ======================
# QUICK SETUP COMMANDS
# ======================

# 1. Copy this file: cp .env.example .env.local
# 2. Generate secret: openssl rand -base64 32
# 3. Update DATABASE_URL with your database connection
# 4. Update NEXTAUTH_URL with your domain
# 5. Configure email settings (optional)
# 6. Run: npm run dev

# WebSocket Server
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# VAPID Keys for Push Notifications (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key" 